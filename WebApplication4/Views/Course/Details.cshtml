@model WebApplication4.Course

@{
    ViewBag.Title = "Details";
}

<h2>Golf Course Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zip)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telephone)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit Course", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Add Hole", "Create", "Hole", new { id = Model.Id }, null) |
    @Html.ActionLink("Back to List", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Number
        </th>
        <th>
            Par
        </th>
        <th>
            Type
        </th>
        <th>
            Total Yards
        </th>
        <th>
            Yards From Blue
        </th>
        <th>
            Yards From White
        </th>
        <th>
            Yards From Red
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Holes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Par)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalYards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YardsFromBlue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YardsFromWhite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YardsFromRed)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", "Hole", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "Hole", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Hole", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>