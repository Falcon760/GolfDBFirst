@model IEnumerable<WebApplication4.Combined>

@{
    ViewBag.Title = "Home Page";
}
@using WebApplication4.Models

<div class="page-header">
    <h1>
        @Html.Image("/Content/Golf1.jpg", "alt", "100") Golf Tracker
        <small>Statistics and Analysis</small>
    </h1>
</div>
<p>
    This is your Golf Tracker.  It records rounds, scores, and statistics about the golf you play.
    It can also hold names and information about your friends.
</p>


<div class="row">

    <div class="col-md-4">
        <h2>Players</h2>
        <table class="table table-hover">
       
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player.LastName)
                    </td>
                  
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
