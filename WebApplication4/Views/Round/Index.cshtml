@model IEnumerable<WebApplication4.Round>
@using WebApplication4.Models;
@{
    ViewBag.Title = "Golf Rounds";
}

<h2>Golf Rounds</h2>

<p>
    @Html.ActionLink("Create New Round", "Create")
</p>

@using (Html.BeginForm("Search", "Round"))
{
    @Html.Editor("SearchBox")
    <input type="submit" value="Search" />
    
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoundDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoundDate)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Name)*@
            @Html.Truncate(item.Name,20)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
